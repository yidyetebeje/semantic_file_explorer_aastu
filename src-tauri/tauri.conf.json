{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "semantic_file_explorer",
  "version": "0.1.0",
  "identifier": "com.semanticfileexplorer.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "semantic_file_explorer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/thumbnails/*"
        ]
      },
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "localhost",
          "windows": ["main"],
          "enable": true,
          "plugins": []
        }
      ]
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/*"]
    },
    "env": {
      "allowlist": ["GEMINI_API_KEY"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
